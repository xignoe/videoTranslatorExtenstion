{
  "manifest_version": 3,
  "name": "Video Translator",
  "version": "1.0.0",
  "description": "Real-time translation and subtitle generation for any video content on the web",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/dataProtection.js",
        "content/privacyManager.js",
        "content/securityIsolation.js",
        "content/errorHandler.js",
        "content/statusIndicator.js",
        "content/videoDetector.js",
        "content/audioProcessor.js",
        "content/speechRecognizer.js",
        "content/translationService.js",
        "content/subtitleStyleManager.js",
        "content/subtitleRenderer.js",
        "content/subtitleTimer.js",
        "content/audioSpeechIntegration.js",
        "content/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Video Translator",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "options_page": "options/options.html",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["content/*", "background/settingsManager.js"],
      "matches": ["<all_urls>"]
    }
  ]
}